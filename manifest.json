{
  "manifest_version": 2,
  "name": "Quickalc",
  "version": "1.0",
  "description": "Add a browser action to make quick popup expression calculations.",
  "homepage_url": "https://github.com/nezort11/quickalc",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "content_security_policy": "script-src 'self' https://unpkg.com; object-src 'self'",

  "browser_action": {
    "default_icon": "icons/icon-32.png",
    "theme_icons": [
      {
        "light": "icons/icon-32-light.png",
        "dark": "icons/icon-32.png",
        "size": 32
      }
    ],
    "default_title": "Quickalc",
    "default_popup": "./index.html"
  }
}
